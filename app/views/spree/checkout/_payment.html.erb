<div id="payment-methods-container">
  <%= render partial: 'spree/checkout/payment/storecredit' %>

  <h5 class="mb-1">
    <%= I18n.t('spree.checkout.payment_method') %>
  </h5>

  <%= form.fields_for :payments_attributes do |payment| %>
    <ul id=payment-methods class="accordion list-group mb-4">
      <% checkout_available_payment_methods.each do |payment_method| %>
        <li class="accordion-item list-group-item p-0 m-0">
          <% is_active_method = (payment_method.id == @order.payments.checkout.last&.payment_method_id || payment_method == checkout_available_payment_methods.first) %>

          <%= payment.radio_button :payment_method, payment_method.id, checked: is_active_method %>
          <%= payment.label :payment_method, value: payment_method.id, class: 'd-flex align-items-center ps-5 p-0 min-h-50px', data: { bs_toggle: 'collapse', bs_target: "#payment-method-container-#{payment_method.id}" }  do %>
            <div class="flex-fill">
              <%= payment_method.name %>
            </div>
          <% end %>

          <%= render partial: "spree/checkout/payment/#{payment_method.method_type}", locals: { payment_method: payment_method } %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>

<% content_for :back_button do %>
  <%= link_to spree.checkout_state_path(previous_step_name), class: 'btn btn-link' do %>
    <%= spree_checkout_svg_tag('chevron-left.svg') %> <%= I18n.t("spree.checkout.return_to_#{previous_step_name}") %>
  <% end %>
<% end %>

<% content_for :proceed_button do %>
  <%= submit_tag I18n.t("spree.checkout.continue_to_#{next_step_name}"), class: 'btn btn-primary w-100' %>
<% end %>

<% content_for :aside do %>
  <div id="checkout-summary" class="col-md-12 col-lg-auto" data-hook="checkout_summary_box">
    <div class="checkout-summary-container position-sticky">
      <%= render partial: 'summary', locals: { order: @order } %>
    </div>
  </div>
<% end %>
