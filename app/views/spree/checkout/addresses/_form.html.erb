<% address_id = address_type.chars.first %>

<div class="inner" data-hook='<%= "#{address_type}_inner" %>'>

  <div class="form-group form-floating mb-3" id='<%= "#{address_id}firstname" %>'>
      <%= form.text_field :firstname, class: 'form-control', required: true, placeholder: Spree.t(:first_name) %>

      <%= form.label :firstname do %>
        <%= Spree.t(:first_name) %><abbr class="required" title="required">*</abbr>
      <% end %>
  </div>

  <div class="form-group form-floating" id='<%= "#{address_id}lastname" %>'>
    <%= form.text_field :lastname, class: 'form-control', required: true, placeholder: Spree.t(:last_name) %>

    <%= form.label :lastname do %>
      <%= Spree.t(:last_name) %><abbr class="required" title="required">*</abbr>
    <% end %>
  </div>

  <% if Spree::Config[:company] %>
    <div class="form-group form-floating" id='<%= "#{address_id}company" %>'>
      <%= form.text_field :company, class: 'form-control', placeholder: Spree.t(:company) %>
      <%= form.label :company, Spree.t(:company) %>
    </div>
  <% end %>

  <div class="form-group form-floating" id='<%= "#{address_id}address1" %>'>
    <%= form.text_field :address1, class: 'form-control required', placeholder: Spree.t(:street_address) %>

    <%= form.label :address1 do %>
      <%= Spree.t(:street_address) %><abbr class="required" title="required">*</abbr>
    <% end %>
  </div>

  <div class="form-group form-floating" id='<%= "#{address_id}address2" %>'>
    <%= form.text_field :address2, class: 'form-control', placeholder: Spree.t(:street_address_2) %>
    <%= form.label :address2, Spree.t(:street_address_2) %>
  </div>

  <div class="form-group form-floating" id='<%= "#{address_id}city" %>'>
    <%= form.text_field :city, class: 'form-control', required: true, placeholder: Spree.t(:city) %>

    <%= form.label :city do %>
      <%= Spree.t(:city) %><abbr class="required" title="required">*</abbr>
    <% end %>
  </div>

  <div class="form-group form-floating" id='<%= "#{address_id}country" %>'>
    <%= form.collection_select :country_id, available_countries, :id, :name, {}, { class: 'form-select', required: true } %>

    <%= form.label :country_id do %>
      <%= Spree.t(:country) %><abbr class="required" title="required">*</abbr>
    <% end %>
  </div>

  <% if Spree::Config[:address_requires_state] %>
    <div class="form-group form-floating" id='<%= "#{address_id}state" %>'>
      <% have_states = !address.country.states.empty? %>
      <%= form.label :state do %>
        <%= Spree.t(:state) %><abbr class='required' title="required" id='<%= "#{address_id}state-required" %>'>*</abbr>
      <% end %>

      <%== state_elements = [
         form.collection_select(:state_id, address.country.states,
                            :id, :name,
                            {include_blank: true},
                            {class: have_states ? 'form-control' : 'form-control hidden',
                            required: have_states,
                            disabled: !have_states}) +
         form.text_field(:state_name,
                            class: !have_states ? 'form-control' : 'form-control hidden',
                            required: !have_states,
                            disabled: have_states)
         ].join.gsub('"', "'").gsub("\n", "") %>
    </div>
      <noscript>
        <%= form.text_field :state_name, class: 'form-control', required: true %>
      </noscript>
  <% end %>

  <div class="form-group form-floating" id='<%= "#{address_id}zipcode" %>'>
    <%= form.text_field :zipcode, class: 'form-control', required: address.require_zipcode?, placeholder: Spree.t(:zip) %>
    <%= form.label :zipcode do %>
      <%= Spree.t(:zip) %><% if address.require_zipcode? %><abbr class="required" title="required">*</abbr><% end %>
    <% end %>
  </div>

  <div class="form-group form-floating" id='<%= "#{address_id}phone" %>'>
    <%= form.phone_field :phone, class: 'form-control', required: address.require_phone?, placeholder: Spree.t(:phone) %>

    <%= form.label :phone do %>
      <%= Spree.t(:phone) %><% if address.require_phone? %><abbr class="required" title="required">*</abbr><% end %>
    <% end %>
  </div>

  <% if Spree::Config[:alternative_shipping_phone] %>
    <div class="form-group form-floating" id='<%= "#{address_id}altphone" %>'>
      <%= form.phone_field :alternative_phone, class: 'form-control', placeholder: Spree.t(:alternative_phone) %>
      <%= form.label :alternative_phone, Spree.t(:alternative_phone) %>
    </div>
  <% end %>
</div>
