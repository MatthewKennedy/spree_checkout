<% content_for :express_checkout_options do %>
  <% spree_checkout_express_checkout_payment_methods.each do |express_checkout| %>
    <%= express_checkout.name %>
  <% end %>
<% end %>

<% content_for :back_button do %>
  <% # i18n-tasks-use I18n.t('spree_checkout.return_to_cart') %>
  <%= link_to spree.cart_path, class: 'btn btn-link' do %>
    <%= spree_checkout_svg_tag('chevron-left.svg') %> <%= Spree.t(:return_to_cart) %>
  <% end %>
<% end %>

<% content_for :proceed_button do %>
  <% # i18n-tasks-use I18n.t('spree_checkout.continue_to_delivery') %>
  <%= submit_tag I18n.t("spree_checkout.continue_to_#{spree_checkout_next_step_name}"), class: 'btn btn-primary w-100' %>
<% end %>
