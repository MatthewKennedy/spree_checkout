<div id="payment-methods-container">
  <%= render partial: 'spree/checkout/payment/storecredit' %>

  <h5 class="mb-1">
    <%= I18n.t('spree_checkout.payment_method') %>
  </h5>

  <% if spree_checkout_available_payment_methods.any? %>
    <%= form.fields_for :payments_attributes do |payment| %>
      <ul id=payment-methods class="accordion list-group">
        <% spree_checkout_available_payment_methods.each_with_index do |payment_method, index| %>
          <% if index == 0 %>
            <% show_first = true %>
            <% show_container = 'show' %>
          <% else %>
            <% show_first = false %>
            <% show_container = '' %>
          <% end %>
          <% is_active_method = (payment_method.id == @order.payments.checkout.last&.payment_method_id || payment_method == spree_checkout_available_payment_methods.first) %>

          <li class="accordion-item list-group-item p-0 m-0">
            <%= payment.radio_button :payment_method, payment_method.id, checked: is_active_method %>
            <%= payment.label :payment_method, value: payment_method.id, class: 'd-flex align-items-center ps-5 p-0 min-h-50px', aria: {expanded: show_first } ,data: { bs_toggle: 'collapse', bs_target: "#payment-method-container-#{payment_method.id}" }  do %>
              <div class="flex-fill">
                <%= payment_method.name %>
              </div>
            <% end %>

            <div id="payment-method-container-<%= payment_method.id %>" class="accordion-collapse collapse <%= show_container %>" data-bs-parent="#payment-methods">
              <%= render partial: "spree/checkout/payment/#{payment_method.method_type}", locals: { payment_method: payment_method } %>
            </div>
          </li>
        <% end %>
      </ul>
    <% end %>
  <% else %>
    <div class="alert alert-info">
      <%= I18n.t('spree_checkout.no_payment_method_options_provided_contact_the_store_owner') %>
    </div>
  <% end %>
</div>
